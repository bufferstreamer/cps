    <select id="selectSalesForecastById" parameterType="Long"
            resultMap="SalesForecastResult">
        <include refid="selectSalesForecastVo"/>
        where id = #{id}
    </select>

    <insert id="insertSalesForecast" parameterType="SalesForecast" useGeneratedKeys="true"
            keyProperty="id">
        insert into sales_forecast
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="productId != null">product_id,
            </if>
            <if test="salesForecast1 != null">sales_forecast_1,
            </if>
            <if test="salesForecast2 != null">sales_forecast_2,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="productId != null">#{productId},
            </if>
            <if test="salesForecast1 != null">#{salesForecast1},
            </if>
            <if test="salesForecast2 != null">#{salesForecast2},
            </if>
        </trim>
    </insert>

    <update id="updateSalesForecast" parameterType="SalesForecast">
        update sales_forecast
        <trim prefix="SET" suffixOverrides=",">
            <if test="productId != null">product_id =
                #{productId},
            </if>
            <if test="salesForecast1 != null">sales_forecast_1 =
                #{salesForecast1},
            </if>
            <if test="salesForecast2 != null">sales_forecast_2 =
                #{salesForecast2},
            </if>
            <if test="status != null">status =
                #{status},
            </if>
        </trim>
        where id = #{id}
    </update>
    <update id="updateStatusById">
        update sales_forecast
        set status = 1
        where id = #{id}
    </update>
    <update id="updateStatusByIds" parameterType="String">
        update sales_forecast
        set status = 1 where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

    <delete id="deleteSalesForecastById" parameterType="Long">
        delete
        from sales_forecast
        where id = #{id}
    </delete>

    <delete id="deleteSalesForecastByIds" parameterType="String">
        delete from sales_forecast where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <delete id="deleteSalesForecastByProductId" parameterType="long">
        delete
        from sales_forecast where cps.sales_forecast.product_id = #{productId}
    </delete>

</mapper>