    <sql id="selectSalesForecastVo">
        select id, product_id, good_name, sales_forecast_1, sales_forecast_2, status
        from sales_forecast
    </sql>

    <select id="selectSalesForecastList" parameterType="SalesForecast" resultMap="SalesForecastResult">
        <include refid="selectSalesForecastVo"/>
        <where>
            <if test="productId != null ">
                and product_id = #{productId}
            </if>
            <if test="goodName != null and goodName != ''">
                and good_name like #{goodName}
            </if>
            <if test="salesForecast1 != null  and salesForecast1 != ''">
                and sales_forecast_1 = #{salesForecast1}
            </if>
            <if test="salesForecast2 != null  and salesForecast2 != ''">
                and sales_forecast_2 = #{salesForecast2}
            </if>
               and status = 0
        </where>
    </select>

