<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cps.sales.mapper.SalesForecastMapper">

    <resultMap type="SalesForecast" id="SalesForecastResult">
        <result property="id" column="id"/>
        <result property="productId" column="product_id"/>
        <result property="goodName" column="good_name"/>
        <result property="salesForecast1" column="sales_forecast_1"/>
        <result property="salesForecast2" column="sales_forecast_2"/>
        <result property="status" column="status"/>
    </resultMap>

    <!--<resultMap type="SalesForecastVO" id="SalesForecastResultVO">
